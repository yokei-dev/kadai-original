<div class="row">
    <div class="col-sm-6 offset-sm-3">
        
        <%= form_with(model: schedule, local: true, multipart: true) do |f| %>
            <%= render 'layouts/error_messages', model: f.object %>
            
            <div class="form-group">
                <%= f.label :event, 'イベント' %>
                <%= f.text_field :event, class: 'form-control' %>
            </div>
            
            <div class="form-group">
                <%= f.label :date, '日程' %>
                <%= f.date_select :date, class: 'form-control' %>
            </div>

            
            <div class="form-group">
                <%= f.label :departure_time, '出発時間' %>
                <%= f.time_field :departure_time, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= f.label :departure_place, '出発場所' %>
                <%= f.text_field :departure_place, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= f.label :arrival_time, '到着時間' %>
                <%= f.time_field :arrival_time, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= f.label :arrival_place, '到着場所' %>
                <%= f.text_field :arrival_place, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= f.label :price, '費用' %>
                <%= f.text_field :price, class: 'form-control' %>
            </div>   
        
            <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
            
        <% end %>
        
    </div>
</div>