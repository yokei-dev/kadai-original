<% if trips.any? %>
    <ul>
        <% trips.each do |trip| %>
            <li class="media">
                <img class="mr-2 rounded" src="<%="/trip_images/#{trip.image_name}"%>" alt="" width="200" height="200">
                <div class="media-body">
                    <div>
                        <p><%= link_to trip.title, trip_path(trip)%></p>
                    </div>
                    <div>
                        <%= trip.started_at %>〜<%= trip.finished_at %>
                        <% if current_user == trip.user %>
                        <p><%= link_to '編集', edit_trip_path(trip), class: 'btn btn-success' %></p>
                        <p><%= link_to '削除', trip, method: :delete, class: 'btn btn-danger' %></p>
                        <% end %>
                        <%= render 'likes/like_button', trip: trip %>
                    </div>
                </div>
            </li>
        <% end %>
    </ul>
<% end %>