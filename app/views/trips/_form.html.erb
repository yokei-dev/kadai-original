<div class="row">
    <div class="col-sm-6 offset-sm-3">
        
        <%= form_with(model: trip, local: true, multipart: true) do |f| %>
        
            <div class="form-group">
                <%= f.label :title, 'タイトル' %>
                <%= f.text_field :title, class: 'form-control' %>
            </div>
            
            <div class="form-group">
                <%= f.label :started_at, '旅行開始日' %>
                <%= f.date_select :started_at, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= f.label :finished_at, '旅行終了日' %>
                <%= f.date_select :finished_at, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= f.label :image, '画像' %>
                <%= f.file_field :image, class: 'form-control' %>
            </div>   
        
            <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
            
        <% end %>
        
    </div>
</div>